<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">

    <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>
          Search Results:
        </th>
      </tr>
    </thead>
    <% @results.each do |item| %>
      <tbody>
      <tr>
        <td>
          <%= link_to "#{item.name} - #{item.type_list.join(", ")}", user_item_path(item.user_id, item.id) %>

          <%= link_to "Owned by #{item.user.name}", item.user, :class => "pull-right" %>
          <br>
          Tags: <%= item.tag_list.length > 0 ? item.tag_list : "none" %>
        </td>
      </tr>
      </tbody>
    <% end %>
    </table>

    <br>

  </div>
  <div class="col-md-2"></div>
</div>



